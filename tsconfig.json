{
	"compilerOptions": {
		"target": "ES2024",
		"module": "CommonJS",
		// "moduleResolution": "",

		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,

		
		"outDir": "./dist",
		// "baseUrl": "./src",
		"paths": {
			"@@*": ["./src/modules/*"],
		},
		
		"incremental": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
	}
}
