{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",

		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,

		"moduleResolution": "nodenext",
		
		"outDir": "./dist",
		// "baseUrl": "./src",
		"paths": {
			// "@ctrl/Test.controller": ["src/controllers/Test.controller.ts"],
		},
		
		"incremental": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
	}
}
